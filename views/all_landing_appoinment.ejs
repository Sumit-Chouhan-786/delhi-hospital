<%- include('./layout/admin_header.ejs') %>

    <div class="container">
        <div class="row">
            <!-- all_landing_appointment.ejs -->
            <div class="col-lg-12 my-3">
                <!-- Display session message -->
             
            
                        <!-- Table for displaying all appointments -->
                        <div>
                            <table class="table table-bordered table-hover text-center align-middle">
                                <thead class="text-white table-dark">
                                    <tr>
                                        <th>ID</th>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Phone</th>
                                        <th>Time and Date</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- Check if there are any appointments -->
                                    <% if (landingAppointments && landingAppointments.length> 0) { %>
                                        <% landingAppointments.forEach((appointment, index)=> { %>
                                            <tr>
                                                <td>
                                                    <%= index + 1 %>
                                                </td>
                                                <td>
                                                    <%= appointment.name %>
                                                </td>
                                                <td>
                                                    <%= appointment.email %>
                                                </td>
                                                <td>
                                                    <%= appointment.phone %>
                                                </td>
                                                <td>
                                                    <%= new Date(appointment.createdAt).toLocaleString() %>
                                                </td>
                                                <td>
                                                    <a href="/admin/deleteLandingAppointments/<%= appointment._id %>"
                                                        class="btn btn-danger btn-sm" title="Delete">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                            <% }) %>
                                                <% } else { %>
                                                    <tr>
                                                        <td colspan="6">No appointments available.</td>
                                                    </tr>
                                                    <% } %>
                                </tbody>
                            </table>
                        </div>
            </div>

        </div>
    </div>

    <%- include('./layout/admin_footer.ejs') %>