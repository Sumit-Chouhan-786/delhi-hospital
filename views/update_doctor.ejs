<!-- Include the admin header -->
<%- include('./layout/admin_header.ejs') %>

  <div class="container mt-4">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <!-- Card for Form -->
        <div class="card shadow-lg">
          <div class="card-header bg-primary text-white text-center">
            <h3>Update Doctor</h3>
          </div>
          <div class="card-body">
            <!-- Start of the form -->
            <form action="/admin/updateDoctor/<%= doctor._id %>" method="POST"
              enctype="multipart/form-data" id="update-doctor-form">
              <!-- Doctor Name Field -->
              <div class="mb-3">
                <label for="name" class="form-label">Doctor Name</label>
                <input type="text" class="form-control" id="name" name="name" value="<%= doctor.name %>"
                  placeholder="Enter doctor name" required />
              </div>

              <!-- Specialist Field -->
              <div class="mb-3">
                <label for="specialist" class="form-label">Specialist</label>
                <input type="text" class="form-control" id="specialist" name="specialist"
                  value="<%= doctor.specialist %>" placeholder="Enter specialist field" required />
              </div>
<!-- description Field -->
<div class="mb-3">
  <label for="description" class="form-label">Description</label>
  <input type="text" class="form-control" id="description" name="description" placeholder="Enter Doctor's description"
    required />
</div>
              <!-- Doctor Image Field -->
              <div class="mb-3">
                <label for="image" class="form-label">Select Image</label>

                <!-- Input for the new image -->
                <input type="file" class="form-control" name="doctorImage" id="image" />

                <img src="/uploads/<%= doctor.doctorImage %>" alt="Doctor Image" class="img-thumbnail"
                  style="width: 100px; height: 100px; object-fit: cover" />

                <!-- Hidden input to store the old image filename -->
                <input type="hidden" name="old_image" value="<%= doctor.doctorImage %>" />
              </div>

              <!-- Submit Button -->
              <div class="text-center">
                <button type="submit" class="btn btn-primary px-4">
                  Update Doctor
                </button>
              </div>
            </form>
            <!-- End of the form -->
          </div>
        </div>
      </div>
    </div>
  </div>

  <%- include("./layout/admin_footer.ejs") %>