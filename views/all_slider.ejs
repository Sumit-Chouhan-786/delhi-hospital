<!-- Include the admin header -->
<%- include('./layout/admin_header.ejs') %>

<div class="container">
  <div class="row">
    <div class="col-lg-12 my-3">
      <% if (message) { %>
      <div
        class="alert d-flex justify-content-between alert-dismissible fade show alert-<%= message.type %>"
        role="alert"
      >
        <strong><%= message.message %></strong>
        <button
          class="btn-close"
          type="button"
          data-bs-dismiss="alert"
          aria-label="Close"
        ></button>
      </div>
      <% } %>
    </div>
  </div>

  <!-- Table to display all sliders -->
  <table class="table table-bordered table-hover text-center align-middle">
    <thead class="text-white table-dark">
      <tr>
        <th>ID</th>
        <th>Title</th>  <!-- Added Title Column -->
        <th>Description</th>  <!-- Added Description Column -->
        <th>Slider Image</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <!-- Loop through the sliders -->
      <% sliders.forEach((slider, index) => { %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= slider.title %></td>  <!-- Displaying the title -->
          <td><%= slider.description %></td>  <!-- Displaying the description -->
          <td>
            <img
              src="/uploads/<%= slider.sliderImage %>"
              alt="Slider Image"
              class="img-thumbnail"
              style="width: 50px; height: 50px"
            />
          </td>
          <td>
            <a href="/admin/updateSlider/<%= slider._id %>" class="btn btn-success btn-sm">
              <i class="fas fa-edit"></i>
            </a>
            <a href="/admin/deleteSlider/<%= slider._id %>" class="btn btn-danger btn-sm">
              <i class="fas fa-trash"></i>
            </a>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>
</div>

<!-- Include the admin footer -->
<%- include("./layout/admin_footer.ejs") %>
