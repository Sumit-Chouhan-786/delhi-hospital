<!-- Include the admin header -->
<%- include('./layout/admin_header.ejs') %>
<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <!-- Card for Form -->
      <div class="card shadow-lg">
        <div class="card-header bg-primary text-white text-center">
          <h3>Add doctor</h3>
        </div>
        <div class="card-body">
          <!-- Form starts here -->
          <form
            action="/admin/addDoctor"
            method="POST"
            enctype="multipart/form-data"
          >
            <!-- Name Field -->
            <div class="mb-3">
              <label for="name" class="form-label">Doctor Name</label>
              <input
                type="text"
                class="form-control"
                id="name"
                name="name"
                placeholder="Name"
                required
              />
            </div>
            <!-- Description Field -->
            <div class="mb-3">
              <label for="description" class="form-label"
                >Doctor Specialist</label
              ><br />
              <input
                class="form-control"
                
                id="specialist"
                name="specialist"
                placeholder="specialist"
                required
              ></input>
            </div>
            <!-- image Field -->
            <div class="mb-3">
              <label for="doctorImage" class="form-label">Doctor image</label
              ><br />
              <input id="doctorImage" type="file" name="doctorImage" />
            </div>

            <!-- Submit Button -->
            <div class="text-center">
              <button type="submit" class="btn btn-primary px-4">Submit</button>
            </div>
          </form>
          <!-- Form ends here -->
        </div>
      </div>
    </div>
  </div>
</div>
<%- include("./layout/admin_footer.ejs") %>
