<!-- Include the admin header -->
<%- include('./layout/admin_header.ejs') %>

<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <!-- Card for Form -->
      <div class="card shadow-lg">
        <div class="card-header bg-primary text-white text-center">
          <h3>Add Services</h3>
        </div>
        <div class="card-body">
          <!-- Start of the form -->
          <form action="/admin/addServices"
            method="POST"
            enctype="multipart/form-data">
            <!-- Student Name Field -->
            
            <!-- Title Field -->
            <div class="mb-3">
              <label for="title" class="form-label">Title</label>
              <input
                type="text"
                class="form-control"
                id="title"
                name="title"
                placeholder="Enter title"
                required
              />
            </div>
            
            <!-- Year Field -->
            <div class="mb-3">
              <label for="Description" class="form-label">Description</label>
              <input
                type="text"
                class="form-control"
                id="Description"
                name="description"
                placeholder="Enter Description"
                required
              />
            </div>
            
           
               <!-- Image Upload Field -->
            <div class="mb-3">
              <label for="servicesImage" class="form-label">Service Image</label>
              <input
                type="file"
                class="form-control"
                id="servicesImage"
                name="servicesImage"
                required
              />
              <div class="form-text">
                Upload the service's image here (JPG/PNG).
              </div>
            </div>
            
            <!-- Submit Button -->
            <div class="text-center">
              <button type="submit" class="btn btn-primary px-4">Submit</button>
            </div>
          </form>
          <!-- End of the form -->
        </div>
      </div>
    </div>
  </div>
</div>

<%- include("./layout/admin_footer.ejs") %>
