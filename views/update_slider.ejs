<!-- Include the admin header -->
<%- include('./layout/admin_header.ejs') %>

<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <!-- Card for Form -->
      <div class="card shadow-lg">
        <div class="card-header bg-primary text-white text-center">
          <h3>Update Slider</h3>
        </div>
        <div class="card-body">
          <!-- Start of the form -->
          <form
            action="/admin/updateSlider/<%= slider._id %>"
            method="POST"
            enctype="multipart/form-data"
          >
            <input
              type="hidden"
              name="old_image"
              value="<%= slider.sliderImage %>"
            />
            <div class="mb-3">
              <label for="image" class="form-label">Select Image</label>

              <!-- Input for the new image -->
              <input
                type="file"
                class="form-control"
                name="sliderImage"
                id="image"
              />

              <img
                src="/uploads/<%=  slider.sliderImage %>"
                alt="Slider image"
                class="img-thumbnail"
                style="width: 100px; height: 100px; object-fit: cover"
              />

              <!-- Hidden input to store the old image filename -->
              <input
                type="hidden"
                name="old_image"
                value="<%=  slider.sliderImage %>"
              />
            </div>
            <div class="text-center">
              <button type="submit" class="btn btn-primary px-4">
                Update Slider
              </button>
            </div>
          </form>

          <!-- End of the form -->
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Include the admin footer -->
<%- include("./layout/admin_footer.ejs") %>
