<!-- Include the admin header -->
<%- include('./layout/admin_header.ejs') %>

<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <!-- Card for Form -->
      <div class="card shadow-lg">
        <div class="card-header bg-primary text-white text-center">
          <h3>Update Course</h3>
        </div>
        <div class="card-body">
          <!-- Start of the form -->
          <form
            action="/admin/updateCourse/<%= course._id %>?_method=PATCH"
            method="POST"
            id="update-course-form"
          >
            <!-- Course Name Field -->
            <div class="mb-3">
              <label for="name" class="form-label">Course Name</label>
              <input
                type="text"
                class="form-control"
                id="name"
                name="name"
                value="<%= course.name %>"
                placeholder="Enter course name"
                required
              />
            </div>

            <!-- Course Description Field -->
            <div class="mb-3">
              <label for="description" class="form-label"
                >Course Description</label
              >
              <textarea
                class="form-control"
                id="description"
                name="description"
                placeholder="Enter course description"
                rows="3"
                required
              >
<%= course.description %></textarea
              >
            </div>
            <div class="mb-3">
              <label for="image" class="form-label">Select Image</label>

              <!-- Input for the new image -->
              <input
                type="file"
                class="form-control"
                name="courseImage"
                id="image"
              />

              <img
                src="/uploads/<%= course.courseImage %>"
                alt="Course Image"
                class="img-thumbnail"
                style="width: 100px; height: 100px; object-fit: cover"
              />

              <!-- Hidden input to store the old image filename -->
              <input
                type="hidden"
                name="old_image"
                value="<%= course.courseImage %>"
              />
            </div>

            <!-- Submit Button -->
            <div class="text-center">
              <button type="submit" class="btn btn-primary px-4">
                Update Course
              </button>
            </div>
          </form>
          <!-- End of the form -->
        </div>
      </div>
    </div>
  </div>
</div>

<%- include("./layout/admin_footer.ejs") %>
