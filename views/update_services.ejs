<!-- Include the admin header -->
<%- include('./layout/admin_header.ejs') %>

<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <!-- Card for Form -->
      <div class="card shadow-lg">
        <div class="card-header bg-primary text-white text-center">
          <h3>Update Service</h3>
        </div>
        <div class="card-body">
          <!-- Start of the form -->
          <form
            action="/admin/updateServices/<%= service._id %>"
            method="POST"
            enctype="multipart/form-data"
          >
            <!-- Title Field -->
            <div class="mb-3">
              <label for="title" class="form-label">Title</label>
              <input
                type="text"
                class="form-control"
                id="title"
                name="title"
                placeholder="Enter service title"
                value="<%= service.title || '' %>"
                required
              />
            </div>

            <!-- Description Field -->
            <div class="mb-3">
              <label for="description" class="form-label">Description</label>
              <input
                type="text"
                class="form-control"
                id="description"
                name="description"
                placeholder="Enter service description"
                value="<%= service.description || '' %>"
                required
              />
            </div>

            <!-- Service Image Upload Field -->
            <div class="mb-3">
              <label for="servicesImage" class="form-label">Service Image</label>
              <input
                type="file"
                class="form-control"
                id="servicesImage"
                name="servicesImage"
                accept=".jpg,.png"
              />
              <div class="form-text">
                Upload a new image to update (JPG/PNG). Leave blank to keep the current image.
              </div>
              <% if (service.image) { %>
              <div class="mt-3">
                <img
                  src="/uploads/<%= service.image %>"
                  alt="Current Service Image"
                  class="img-thumbnail"
                  style="width: 100px; height: 100px"
                />
                <p class="text-muted">Current Image</p>
              </div>
              <% } %>
            </div>

            <!-- Submit Button -->
            <div class="text-center">
              <button type="submit" class="btn btn-primary px-4">Update</button>
            </div>
          </form>
          <!-- End of the form -->
        </div>
      </div>
    </div>
  </div>
</div>

<%- include("./layout/admin_footer.ejs") %>
